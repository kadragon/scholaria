# Production Environment Configuration for Scholaria RAG System
# Copy this file to .env.prod and update with your production values

# Security
SECRET_KEY=your-super-secret-django-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost,127.0.0.1

# SSL/HTTPS Configuration (for production behind load balancer/proxy)
SECURE_SSL_REDIRECT=False
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
USE_X_FORWARDED_HOST=True
USE_X_FORWARDED_PORT=True

# Database Configuration
POSTGRES_DB=scholaria_prod
POSTGRES_USER=scholaria_user
POSTGRES_PASSWORD=your-secure-database-password-here

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_CHAT_TEMPERATURE=0.3
OPENAI_CHAT_MAX_TOKENS=1000
OPENAI_EMBEDDING_DIM=3072

# Qdrant Configuration
QDRANT_COLLECTION_NAME=scholaria_prod_documents

# MinIO Configuration
MINIO_ACCESS_KEY=your-minio-access-key-here
MINIO_SECRET_KEY=your-minio-secret-key-here
MINIO_BUCKET_NAME=scholaria-prod-docs
MINIO_BROWSER_REDIRECT_URL=https://yourdomain.com:9001

# Port Configuration
WEB_PORT=8000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# File Upload Limits
FILE_VALIDATION_MAX_SIZE=52428800  # 50MB in bytes

# RAG Configuration
RAG_SEARCH_LIMIT=10
RAG_RERANK_TOP_K=5

# Caching Configuration
LLAMAINDEX_CACHE_ENABLED=true
LLAMAINDEX_CACHE_NAMESPACE=scholaria-prod

# Email Configuration (for error notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.yourprovider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password

# Admin Configuration
ADMIN_URL_PATH=admin  # Change this to a secret path in production
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
SERVER_EMAIL=server@yourdomain.com

# Sentry Configuration (optional, for error tracking)
SENTRY_DSN=your-sentry-dsn-here

# Monitoring
HEALTH_CHECK_ACCESS_TOKEN=your-health-check-token