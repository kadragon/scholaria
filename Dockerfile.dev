# Development Dockerfile for Scholaria RAG System
FROM python:3.13-slim

# System dependencies for builds and tooling
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install uv for dependency management
COPY --from=ghcr.io/astral-sh/uv:latest /uv /bin/uv

# Set working directory
WORKDIR /app

# Copy dependency manifests first for better caching
COPY pyproject.toml uv.lock ./

# Install dependencies with development extras to support tooling
ENV UV_PROJECT_ENVIRONMENT=/opt/uv
RUN uv sync --dev

# Add project files (volume mount will keep these fresh at runtime)
COPY . .

# Ensure virtual environment binaries are discoverable
ENV PATH="/opt/uv/bin:$PATH"
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV DJANGO_SETTINGS_MODULE=core.settings

# Expose Django development port
EXPOSE 8000

# Default command launches Django development server with autoreload
CMD ["uv", "run", "python", "manage.py", "runserver", "0.0.0.0:8000"]
